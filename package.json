{
  "name": "A Sass Vite-template",
  "version": "1.0.0",
  "description": "Simple starter template with Sass mixins,placeholders and variables using Vite as a bundler tool.",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "debug:sass": "sass --watch src/styles/scss/main.scss:src/styles/css/main.css",
    "purge:scss": "purgecss --css dist/assets/*.css --content *.html --output ./"
  },
  "keywords": [
    "vite",
    "sass",
    "scss",
    "template",
    "beginner"
  ],
  "author": "Mihaly Ale",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "sass": "^1.89.0",
    "vite": "^6.3.4"
  },
  "dependencies": {
    "utopia-core-scss": "^1.2.1"
  }
}
